<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="MainViewModel"
            type="com.africogram.www.viewmodels.MainViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg_app_color">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/layout_left_margin"
            android:paddingLeft="@dimen/layout_left_margin"
            android:paddingEnd="@dimen/layout_right_margin"
            android:paddingRight="@dimen/layout_right_margin"
            android:paddingBottom="16dp"
            tools:context=".ui.fragments.MainFragment">

            <!-- main header -->
            <FrameLayout
                android:id="@+id/main_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/main_header_bg_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:fontFamily="@font/lato_heavy"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="@string/main_app_header_text"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@color/content_header_color" />
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <RelativeLayout
                android:id="@+id/africa_map_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@android:color/white"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/main_header">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/africa_map"
                    android:scaleType="fitCenter"
                    android:src="@drawable/africa_map"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/buttonsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/buttons_header_bg_color"
                android:baselineAligned="false"
                app:layout_constraintTop_toBottomOf="@id/africa_map_box">
                <!-- sign up button -->
                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_round_colored"
                    app:mrl_rippleColor="@color/colorPrimaryDark"
                    app:mrl_rippleHover="true"
                    app:mrl_rippleOverlay="true"
                    app:mrl_rippleRoundedCorners="20dp">

                    <Button
                        android:id="@+id/signUpButton"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:onClick="@{() -> MainViewModel.onNavigateToSignUpFragment()}"
                        android:text="@string/sign_up_button_text"
                        android:textAllCaps="false"
                        android:textColor="@color/color_button_text"
                        android:textStyle="bold" />

                </com.balysv.materialripple.MaterialRippleLayout>

                <!-- sign in button -->
                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_round"
                    app:mrl_rippleColor="@color/colorPrimaryDark"
                    app:mrl_rippleHover="true"
                    app:mrl_rippleOverlay="true"
                    app:mrl_rippleRoundedCorners="20dp">

                    <Button
                        android:id="@+id/signInButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{() -> MainViewModel.onNavigateToSignInFragment()}"
                        android:text="@string/sign_in_button_text"
                        android:textAllCaps="false"
                        android:textColor="@color/button_text_colored"
                        android:textStyle="bold" />

                </com.balysv.materialripple.MaterialRippleLayout>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/semiHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/buttonsHeader">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:fontFamily="@font/lato_medium"
                    android:padding="8dp"
                    android:text="@string/africogram_helps_you_head_text"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/darker_gray" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/aboutApp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:drawablePadding="16dp"
                android:fontFamily="@font/lato_medium"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/about_app1_text"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/about_content_color"
                android:textSize="15sp"
                app:drawableStartCompat="@drawable/ic_friends_48"
                app:layout_constraintTop_toBottomOf="@id/semiHead" />

            <View
                android:id="@+id/separator1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_separator_bg_color"
                app:layout_constraintTop_toBottomOf="@id/aboutApp1" />

            <TextView
                android:id="@+id/aboutApp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawablePadding="16dp"
                android:fontFamily="@font/lato_medium"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/about_app2_text"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/about_content_color"
                android:textSize="15sp"
                app:drawableStartCompat="@drawable/ic_chat_48"
                app:layout_constraintTop_toBottomOf="@id/separator1" />

            <View
                android:id="@+id/separator2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_separator_bg_color"
                app:layout_constraintTop_toBottomOf="@id/aboutApp2" />

            <TextView
                android:id="@+id/aboutApp3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawablePadding="16dp"
                android:fontFamily="@font/lato_medium"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/about_app3_text"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/about_content_color"
                android:textSize="15sp"
                app:drawableStartCompat="@drawable/ic_status_48"
                app:layout_constraintTop_toBottomOf="@id/separator2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_separator_bg_color"
                app:layout_constraintTop_toBottomOf="@id/aboutApp3" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>